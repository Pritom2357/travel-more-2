                        "step": 1,
                        "default": 18,
                        "unit": "px"
                    },
                    {
                        "type": "color",
                        "id": "subheading_color",
                        "label": "Subheading Color",
                        "default": "#ffffff"
                    },
                    {
                        "type": "header",
                        "content": "Button"
                    },
                    {
                        "type": "text",
                        "id": "button_label",
                        "label": "Button Label",
                        "default": "Book Now"
                    },
                    {
