{% comment %}
  STATS SECTION
  This section displays four statistics (label + number) against a background image.
  You can easily change the layout or add more stats if needed.
{% endcomment %}

<section
  id="stats-section"
  class="stats-section"
  style="background: no-repeat center/cover url('{{ section.settings.background_image | image_url: width: 2000 }}');"
>
  <div class="container">
    <div class="stats-content">
      <div class="stats-item">
        <h2 class="stats-number">{{ section.settings.stat_1_number }}</h2>
        <p class="stats-label">{{ section.settings.stat_1_label }}</p>
      </div>
      <div class="stats-item">
        <h2 class="stats-number">{{ section.settings.stat_2_number }}</h2>
        <p class="stats-label">{{ section.settings.stat_2_label }}</p>
      </div>
      <div class="stats-item">
        <h2 class="stats-number">{{ section.settings.stat_3_number }}</h2>
        <p class="stats-label">{{ section.settings.stat_3_label }}</p>
      </div>
      <div class="stats-item">
        <h2 class="stats-number">{{ section.settings.stat_4_number }}</h2>
        <p class="stats-label">{{ section.settings.stat_4_label }}</p>
      </div>
    </div>
  </div>

  <style>
    #stats-section {
      position: relative;
      padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
      color: {{ section.settings.text_color }};
      text-align: center;
      overflow: hidden;
    }

    #stats-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_opacity }};
      z-index: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

    /* Flex container for stats items */
    .stats-content {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    /* Individual stat item */
    .stats-item {
      flex: 1 1 180px;
      min-width: 180px; 
      position: relative;
      padding: 20px 10px;
    }

    /* Hollow number styling */
    .stats-number {
      font-size: 3em;
      margin-bottom: 10px;
      font-weight: bold;
      color: transparent; 
      -webkit-text-stroke: 2px #ffffff; 
      text-stroke: 2px #ffffff; 

      text-shadow:
        2px 2px 0 {{section.settings.text_color}},
        -2px 2px 0 {{section.settings.text_color}},
        2px -2px 0 {{section.settings.text_color}},
        -2px -2px 0 {{section.settings.text_color}},
        0px 2px 0 {{section.settings.text_color}},
        2px 0px 0 {{section.settings.text_color}},
        0px -2px 0 {{section.settings.text_color}},
        -2px 0px 0 {{section.settings.text_color}};
    }

    /* Label styling */
    .stats-label {
      font-size: 1.1em;
      text-transform: uppercase;
      letter-spacing: 1px;
      position: relative;
      color: {{ section.settings.label_color }}
    }

    @media (max-width: 767px) {
      #stats-section {
        padding: 40px 10px;
      }
      .stats-number {
        font-size: 2em;
      }
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const statsSection = document.getElementById('stats-section');
      const statsNumbers = document.querySelectorAll('.stats-number');
      let hasAnimated = false;

      function animateNumbers() {
        statsNumbers.forEach(stat => {
          const target = parseInt(stat.textContent, 10);
          stat.textContent = '0';
          const increment = target / 200; 

          const updateNumber = () => {
            let current = parseFloat(stat.textContent);
            if (current < target) {
              current += increment;
              if (current > target) current = target;
              stat.textContent = Math.ceil(current);
              requestAnimationFrame(updateNumber);
            } else {
              stat.textContent = target;
            }
          };

          updateNumber();
        });
      }

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !hasAnimated) {
            animateNumbers();
            hasAnimated = true;
            observer.unobserve(statsSection);
          }
        });
      }, { threshold: 0.5 });

      observer.observe(statsSection);
    });
  </script>

