  }
  
  .section-title {
    font-weight: 800;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
  }
  
  .highlight {
    position: relative;
    z-index: 1;
    padding: 0 8px;
  }
  
  .title-separator {
    width: 80px;
    height: 4px;
    margin: 1.5rem auto;
    border-radius: 2px;
  }
  
  .section-subtitle {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.7;
  }
  
  /* Filter Tabs Styling */
  .tour-filter-container {
    margin-bottom: 2.5rem;
    text-align: center;
  }
  
  .filter-tabs {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    background-color: #f5f5f5;
    padding: 0.5rem;
    border-radius: 50px;
    box-shadow: 0 3px 15px rgba(0,0,0,0.05);
  }
  
  .filter-tab {
    padding: 0.7rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .filter-tab.active {
    background-color: {{ section.settings.accent_color }};
    color: white !important;
    box-shadow: 0 4px 12px {{ section.settings.accent_color }}50;
  }
  
  .filter-tab:hover:not(.active) {
    background-color: rgba(0,0,0,0.05);
  }
  
  /* Tours Grid Layout */
  .tours-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 3rem;
  }
  
  /* Tour Card Styling */
  .tour-card-wrapper {
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .tour-card {
    position: relative;
    height: 100%;
    border-radius: 16px;
    overflow: hidden;
    background-color: white;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  
  .tour-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
  }
  
  /* Tour Card Media Section */
  .tour-card-media {
    position: relative;
    height: 250px;
    overflow: hidden;
  }
  
  .tour-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }
  
  .tour-card:hover .tour-image {
    transform: scale(1.08);
  }
  
  .tour-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .tour-card:hover .tour-overlay {
    opacity: 0.9;
  }
  
  /* Featured Badge */
  .featured-badge {
    position: absolute;
    top: 20px;
    left: 20px;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    color: white;
    font-size: 0.8rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 5px;
    z-index: 3;
    box-shadow: 0 3px 10px rgba(0,0,0,0.2);
  }
  
  /* Quick Actions */
  .quick-actions {
    position: absolute;
    top: 20px;
    right: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 3;
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.3s ease;
  }
  
  .tour-card:hover .quick-actions {
    opacity: 1;
    transform: translateX(0);
  }
  
  .quick-action-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: white;
    color: #333;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 3px 10px rgba(0,0,0,0.2);
    transition: all 0.2s ease;
  }
  
  .quick-action-btn:hover {
    transform: scale(1.1);
    background-color: {{ section.settings.accent_color }};
    color: white;
  }
  
  .quick-action-btn.active {
    background-color: {{ section.settings.accent_color }};
    color: white;
  }
  
  /* Tour Card Content */
  .tour-card-content {
    padding: 25px;
    position: relative;
  }
  
  /* Price Badge */
  .price-badge {
    position: absolute;
    top: -20px;
    right: 20px;
    background-color: {{ section.settings.accent_color }};
    color: white;
    padding: 0.7rem 1rem;
    border-radius: 8px;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }
  
  .price {
    font-size: 1.2rem;
  }
  
  .price-period {
    font-size: 0.8rem;
    font-weight: 400;
    opacity: 0.8;
  }
  
  /* Tour Title */
  .tour-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
    color: inherit !important; /* Reset any inherited colors */
  }

  /* Ensure inline styles take precedence */
  .tour-card-content h3.tour-title[style*="color"] {
    color: v !important;
  }

  /* Keep the hover effect */
  .tour-card:hover .tour-title {
    color: {{ section.settings.accent_color }} !important;
  }
  
  /* Tour Rating */
  .tour-rating {
    display: flex;
    align-items: center;
    gap: 3px;
    margin-bottom: 1rem;
  }
  
  .tour-rating i {
    font-size: 0.9rem;
  }
  
  .review-count {
    font-size: 0.85rem;
    color: #777;
    margin-left: 5px;
  }
  
  /* Tour Details */
  .tour-details {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .tour-detail {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 0.9rem;
    color: #666;
  }
  
  /* Tour Description */
  .tour-description {
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    color: #666;
  }
  
  /* Tour Actions */
  .tour-actions {
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }
  
  .btn-view-details {
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 0.8rem;
    background-color: {{ section.settings.accent_color }};
    color: white !important;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none !important;
    transition: all 0.3s ease;
  }
  
  .btn-view-details:hover {
    box-shadow: 0 5px 15px {{ section.settings.accent_color }}50;
    transform: translateY(-2px);
  }
  
  .btn-quick-view {
    padding: 0.8rem;
    background-color: transparent;
    color: #555;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .btn-quick-view:hover {
    background-color: #f5f5f5;
    border-color: #ccc;
  }
  
  /* Hover Content */
  .tour-hover-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.95);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 10;
  }
  
  .tour-card.show-hover .tour-hover-content {
    opacity: 1;
    visibility: visible;
  }
  
  .tour-hover-content h3 {
    margin-bottom: 1rem;
  }
  
  .tour-hover-content p {
    margin-bottom: 2rem;
    max-width: 90%;
  }
  
  .btn-book-now {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 0.8rem 1.5rem;
    background-color: {{ section.settings.accent_color }};
    color: white !important;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none !important;
    transition: all 0.3s ease;
  }
  
  .btn-book-now:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }
  
  /* View All Container */
  .view-all-container {
    text-align: center;
    margin-top: 3rem;
  }
  
  .btn-view-all {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none !important;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px {{ section.settings.see_more_bg_color }}40;
  }
  
  .btn-view-all:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px {{ section.settings.see_more_bg_color }}60;
  }
  
  /* Responsive Styles */
  @media (max-width: 991px) {
    .tours-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }
  
  @media (max-width: 767px) {
    .filter-tabs {
      padding: 0.3rem;
      flex-wrap: nowrap;
      overflow-x: auto;
      justify-content: flex-start;
      max-width: 100%;
    }
    
    .filter-tab {
      padding: 0.6rem 1rem;
      white-space: nowrap;
    }
    
    .tour-card-media {
      height: 200px;
    }
  }
  
  @media (max-width: 480px) {
    .section-title {
      font-size: calc({{ section.settings.title_size }}px * 0.7) !important;
    }
    
    .section-subtitle {
      font-size: calc({{ section.settings.subtitle_size }}px * 0.9) !important;
    }
    
    .tour-actions {
      flex-direction: column;
    }
  }
</style>

