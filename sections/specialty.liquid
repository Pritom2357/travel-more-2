<section class="features-section py-3">
  <div class="container text-center text-sec"> What do you Get?</div>
  <div class="container cont">
    <div class="row justify-content-center text-center g-4">
      {% for block in section.blocks %}
        <div class="{% if section.blocks.size == 1 %}col-12{% elsif section.blocks.size == 2 %}col-md-6{% elsif section.blocks.size == 3 %}col-md-4{% else %}col-md-3{% endif %}">
          <div class="card feature-item shadow" style="background-color: {{ block.settings.card_bg_color }};">
            <img src="{{ block.settings.image | img_url: 'original' }}" alt="Feature Icon" class="card-img-top">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title" style="color:{{ block.settings.title_color }};">
                {{ block.settings.image_text }}
              </h5>
              <div class="card-text feature-description" style="color: {{ block.settings.description_color }};">
                {{ block.settings.img_description }}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>

  .cont{
    padding-bottom: 3rem;
  }
  
  .features-section {
    background-color: {{section.settings.bg_color}}; /* Background color */
    padding: 1rem 1rem;
    border: 1px solid #e0e0e0;
    /* border-radius: 8px; */
  }

  .feature-item {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    height: 100%; /* Ensure consistent height */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow effect */
    transition: transform 0.2s, box-shadow 0.2s; /* Smooth hover effect */
  }

  .feature-item:hover {
    transform: translateY(-5px); /* Slight lift on hover */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Enhanced shadow on hover */
  }

  .card-img-top {
    height: 200px; /* Consistent image size */
    object-fit: cover; /* Ensure the image fills the area without distortion */
    border-top-left-radius: 8px; /* Match the card's border radius */
    border-top-right-radius: 8px;
  }

  .card-title {
    font-size: {{section.settings.title_size}}px; /* Adjusted for better readability */
    font-weight: 500;
    /* color: #333; */
    margin-bottom: 0.5rem;
  }

  .card-text.feature-description {
    font-size: {{section.settings.sub_title_size}}px;
    margin-bottom: 0;
  }

  .row-cols-1 > .col {
    margin-bottom: 1rem; /* Add spacing after each card in a single row */
  }

  @media (max-width: 768px) {
    .row-cols-1 > .col {
      margin-bottom: 2rem; /* Maintain spacing for smaller screens */
    }
  }

  .text-sec{
    padding:20px;
    font-size: 4rem;
    color: "#0B1E30"
  }
</style>

{% schema %}
{
  "name": "Signature",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color",
      "default":"#fff"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Size",
      "default": 25,
      "min": 10,
      "max": 70,
      "step": 1
    },
    {
      "type": "range",
      "id": "sub_title_size",
      "label": "Sub Title Size",
      "default": 16,
      "min": 10,
      "max": 40,
      "step": 1
    },
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Signatures",
      "settings": [
        {
          "type": "header",
          "content": "Upload Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_text",
          "label": "Text",
          "default": "Write Some Text"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#000"
        },
        {
          "type": "richtext",
          "id": "img_description",
          "label": "Image Description",
          "default": "<p></p>"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#000"
        },
        {
          "type": "color",
          "id": "card_bg_color",
          "label": "Background Color",
          "default": "#fff"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Signature",
      "category": "signature"
    }
  ]
}
{% endschema %}
