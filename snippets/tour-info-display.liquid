{% comment %}
  Display tour information from tags
  
  Required: Must be used after including 'extract-tour-data'
{% endcomment %}

<div class="tour-info-container">
  <h3 class="tour-info-heading">Tour Information</h3>
  
  <div class="tour-info-grid">
    {% if destination != '' %}
      <div class="tour-info-item">
        <div class="info-icon">
          <i class="bi bi-geo-alt"></i>
        </div>
        <div class="info-content">
          <strong>Destination</strong>
          <span>{{ destination }}</span>
        </div>
      </div>
    {% endif %}
    
    <div class="tour-info-item">
      <div class="info-icon">
        <i class="bi bi-calendar-event"></i>
      </div>
      <div class="info-content">
        <strong>Maximum Days</strong>
        <span>{{ maximum_days }} days</span>
      </div>
    </div>
    
    <div class="tour-info-item">
      <div class="info-icon">
        <i class="bi bi-people-fill"></i>
      </div>
      <div class="info-content">
        <strong>Maximum Group Size</strong>
        <span>{{ maximum_persons }} people</span>
      </div>
    </div>
  </div>
</div>

<style>
  .tour-info-container {
    margin: 30px 0;
    padding: 20px;
    border-radius: 8px;
    background-color: #f8f9fa;
  }
  
  .tour-info-heading {
    margin-top: 0;
    margin-bottom: 20px;
    font-size: 1.2em;
  }
  
  .tour-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
  }
  
  .tour-info-item {
    display: flex;
    align-items: center;
  }
  
  .info-icon {
    width: 40px;
    height: 40px;
    margin-right: 10px;
    border-radius: 50%;
    background-color: #449EED;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
  }
  
  .info-content strong {
    display: block;
    font-size: 0.85em;
    color: #666;
  }
  
  .info-content span {
    font-size: 1.1em;
  }
  
  @media screen and (max-width: 749px) {
    .tour-info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>